<div class="py-6">
  <p class="text-lg font-medium text-center mb-4">Hello <%= @email %>!</p>
  <% if @resource.try(:unconfirmed_email?) %>
    <p class="text-sm text-gray-600 text-center">We're contacting you to notify you that your email is being changed to <%= @resource.unconfirmed_email %>.</p>
  <% else %>
    <p class="text-sm text-gray-600 text-center">We're contacting you to notify you that your email has been changed to <%= @resource.email %>.</p>
  <% end %>
</div>
