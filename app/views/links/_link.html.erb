<%= tag.div id: dom_id(link), class: "link-container hover:bg-gray-50 transition-colors duration-300" do %>
  <%= turbo_stream_from link %>
  <div class="grid grid-cols-8 items-center py-4">
    <div class="col-span-5">
      <%= render partial: 'shared/link_component', locals: { link: link, view_path: view_path(link), title_length: 50, description_length: 100 } %>
    </div>
    <div class="col-span-2 text-center text-xs">
      <%= link_to pluralize( link.views_count, "views"), link, class: "px-2 py-1.5 rounded bg-gray-100 no-underline" %>
    </div>
    <div class=" text-center text-xs">
      <%= button_tag "Copy", class: "font-medium px-2 py-1.5 rounded bg-gray-100 no-underline", data: {controller: "clipboard", clipboard_text: view_url(link)} %>
    </div>
  </div>
<% end %>
